@model ASPTP61.Models.libro

@{
    ViewBag.Title = "Editar";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link href="~/Content/Editar.css" rel="stylesheet" type="text/css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">

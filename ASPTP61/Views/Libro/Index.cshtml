@model IEnumerable<ASPTP61.Models.libro>

@{
    ViewBag.Title = "Lista de Libros";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link href="~/Content/Index.css" rel="stylesheet" type="text/css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;1,300&family=Playfair+Display&display=swap" rel="stylesheet">
</head>
<body>
    <h2>Lista de Libros</h2>

    <p>
        @Html.ActionLink("Crear Nuevo", "Agregar")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paginas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editorial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CiudadyPais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeEdicion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paginas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edicion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editorial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CiudadyPais)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeEdicion)
                </td>


                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.Id }) |
                    @Html.ActionLink("Detalles", "Detalles", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id }, new { @class = "aElimina" })
                </td>
            </tr>
        }

    </table>


</body>
</html>
@*En este script se pregunta s quiere eliminar. esta incluido desde el Layout y usa la clase declara arriba aElimina*@
@section scripts {
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm('Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        });
    </script>
}
